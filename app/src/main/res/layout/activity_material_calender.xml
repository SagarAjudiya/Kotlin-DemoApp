<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".components.MaterialCalender">

        <TextView
            android:id="@+id/datePicker"
            android:layout_width="@dimen/dp_zero"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/icon_calender"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/dp_ten"
            android:text="Pick Date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/cornered_border"
            android:layout_marginHorizontal="@dimen/dp_ten"
            android:layout_marginTop="@dimen/dp_fifty" />

        <TextView
            android:id="@+id/timePicker"
            android:layout_width="@dimen/dp_zero"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/icon_time"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/dp_ten"
            android:text="Pick Time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/datePicker"
            android:background="@drawable/cornered_border"
            android:layout_marginHorizontal="@dimen/dp_ten"
            android:layout_marginTop="@dimen/dp_fifty" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>