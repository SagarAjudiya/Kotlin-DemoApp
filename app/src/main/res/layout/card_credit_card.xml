<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="creditCard"
            type="com.example.kotlin_demoapp.model.CreditCardData" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blur_white"
        app:cardCornerRadius="@dimen/_3dp"
        app:cardElevation="@dimen/_0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/_10dp"
            android:paddingBottom="@dimen/_5dp"
            tools:background="@color/black">

            <ImageView
                android:id="@+id/imgCardType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/description"
                android:src="@{creditCard.image}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/icon_mastercard" />

            <TextView
                android:id="@+id/txtCardNumber"
                style="@style/MediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.format(@string/intNumber, creditCard.number)}"
                android:textColor="@color/lightGreen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/txtSecretStars"
                app:layout_constraintTop_toTopOf="@id/txtSecretStars"
                tools:text="@string/dummy_number" />

            <TextView
                android:id="@+id/txtSecretStars"
                style="@style/MediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_50dp"
                android:layout_marginEnd="@dimen/_5dp"
                android:text="@string/secret_stars"
                android:textColor="@color/lightGreen"
                app:layout_constraintBottom_toBottomOf="@id/imgCardType"
                app:layout_constraintEnd_toStartOf="@id/txtCardNumber"
                app:layout_constraintStart_toEndOf="@id/imgCardType"
                app:layout_constraintTop_toTopOf="@id/imgCardType" />

            <TextView
                android:id="@+id/txtCardType"
                style="@style/MediumText"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@{creditCard.name}"
                android:textColor="@color/lightGreen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgCardType"
                tools:text="@string/mastercard" />

            <TextView
                android:id="@+id/txtBalance"
                style="@style/LargeDollarText"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:text="@{String.format(@string/dollarFloatNumber, creditCard.balance)}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtCardType"
                tools:text="@string/dummy_balance" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>