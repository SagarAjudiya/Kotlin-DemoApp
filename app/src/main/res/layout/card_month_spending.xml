<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="monthSpending"
            type="com.example.kotlin_demoapp.model.MonthSpendingData" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blur_white"
        app:cardCornerRadius="@dimen/_5dp"
        app:cardElevation="@dimen/_0dp"
        tools:backgroundTint="@color/black">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtTitleMonthSpending"
                style="@style/MediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_15dp"
                android:text="@{String.format(@string/month_spending_title, monthSpending.month)}"
                android:textColor="@color/lightGreen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/dummy_month_spending_title" />

            <TextView
                android:id="@+id/txtMonthSpending"
                style="@style/LargeDollarText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_15dp"
                android:text="@{String.format(@string/dollarFloatNumber, monthSpending.spentMoney)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/txtMonthSpendingPercent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtTitleMonthSpending"
                tools:text="@string/dummy_balance" />

            <TextView
                android:id="@+id/txtMonthSpendingPercent"
                style="@style/MediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:background="@drawable/round_corner"
                android:backgroundTint="@color/blur_lightGreen"
                android:paddingEnd="@dimen/_5dp"
                android:text="@{String.format(@string/intPercent, monthSpending.spentPercent)}"
                app:drawableStartCompat="@drawable/icon_arrow_down"
                app:layout_constraintBottom_toBottomOf="@id/txtMonthSpending"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/txtMonthSpending"
                app:layout_constraintTop_toTopOf="@id/txtMonthSpending"
                tools:ignore="RtlSymmetry"
                tools:text="@string/dummy_int_percent" />

            <ImageView
                android:layout_width="@dimen/_0dp"
                android:layout_height="@dimen/_0dp"
                android:layout_marginStart="@dimen/_20dp"
                android:contentDescription="@string/description"
                android:scaleType="fitXY"
                android:src="@drawable/img_chart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/txtMonthSpendingPercent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>