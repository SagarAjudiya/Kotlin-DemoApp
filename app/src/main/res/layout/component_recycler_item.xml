<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_twenty"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/componentButton"
        android:layout_width="@dimen/dp_zero"
        android:layout_height="wrap_content"
        android:text="@string/choice"
        app:cornerRadius="@dimen/dp_five"
        android:backgroundTint="@color/deepAquaSecondary"
        android:textAllCaps="false"
        android:textSize="@dimen/_20sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/deepAquaPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>