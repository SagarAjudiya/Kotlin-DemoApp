<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/deepAqua">

    <ImageButton
        android:id="@+id/btnLeftNavbar"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_0dp"
        android:background="@color/deepAqua"
        app:layout_constraintDimensionRatio="1:1"
        android:padding="@dimen/_0dp"
        app:layout_constraintBottom_toBottomOf="@id/txtTitleNavbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtTitleNavbar"
        app:srcCompat="@drawable/icon_back_arrow"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/txtTitleNavbar"
        style="@style/SmallHeadingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TITLE" />


</androidx.constraintlayout.widget.ConstraintLayout>