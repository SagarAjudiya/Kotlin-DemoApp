<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KotlinDemoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/greenPrimary</item>
        <item name="colorPrimaryVariant">#0F4C4A</item>
        <item name="colorOnPrimary">@color/snowWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/greenSecondary</item>
        <item name="colorSecondaryVariant">#5D7A7A</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@color/transparent</item>
    </style>

    <!--  Rounded Corner  -->
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <!--   Large Title Text -->
    <style name="LargeHeadingTitle">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_30sp</item>
        <item name="android:textColor">@color/snowWhite</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--   Small Title Text -->
    <style name="MediumHeadingTitle">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:textColor">@color/snowWhite</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--   Small Title Text -->
    <style name="SmallHeadingTitle">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_17sp</item>
        <item name="android:textColor">@color/snowWhite</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--    Medium Text-->
    <style name="MediumText">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_15sp</item>
        <item name="android:textColor">@color/snowWhite</item>
        <item name="android:drawableTint">@color/snowWhite</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--    Small Text-->
    <style name="SmallText">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:textColor">@color/snowWhite</item>
        <item name="android:drawableTint">@color/snowWhite</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--   Text Button Medium Text -->
    <style name="TextButtonMediumText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/_13sp</item>
        <item name="android:textColor">@color/snowWhite</item>
        <item name="android:drawableTint">@color/snowWhite</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--   Large Dollar Sign Text -->
    <style name="LargeDollarText">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:textColor">@color/snowWhite</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--   Rounded Image -->
    <style name="RoundImage">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.CornerSize50Percent
        </item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
</resources>