<resources>
    <!-- Base application theme. -->
    <style name="Theme.KotlinDemoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deepAquaPrimary</item>
        <item name="colorPrimaryVariant">#12686A</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">#B7E8E6</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <!-- White text EditText Style-->
    <style name="WhiteTextEdittext">
        <item name="android:theme">@style/WhiteCursor</item>
        <item name="android:padding">@dimen/_13dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- White cursor color -->
    <style name="WhiteCursor">
        <item name="colorPrimary">@color/white</item>
    </style>

    <!--White Status Bar -->
    <style name="Theme.KotlinDemoApp.White" parent="Theme.KotlinDemoApp">
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <!--Orange Status Bar -->
    <style name="Theme.KotlinDemoApp.Orange" parent="Theme.KotlinDemoApp">
        <item name="android:statusBarColor">@color/orange</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--Blue Status Bar -->
    <style name="Theme.KotlinDemoApp.Blue" parent="Theme.KotlinDemoApp">
        <item name="android:statusBarColor">@color/skyBlue</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="blurCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/blur_white</item>
        <item name="cardElevation">@dimen/_0dp</item>
        <item name="cornerRadius">@dimen/_10dp</item>
    </style>

    <!--  Rounded Corner  -->
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <!--   Large Title Text -->
    <style name="LargeHeadingTitle">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--   Small Title Text -->
    <style name="MediumHeadingTitle">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--   Small Title Text -->
    <style name="SmallHeadingTitle">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--   Button With Icon Text -->
    <style name="ButtonWithIcon" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="android:minHeight">@dimen/_40dp</item>
        <item name="android:insetTop">@dimen/_0dp</item>
        <item name="android:insetBottom">@dimen/_0dp</item>
    </style>

    <!--   Text Button With Icon Text -->
    <style name="TextButtonWithIcon" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
    </style>

    <!--    Medium Text-->
    <style name="MediumText">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorPrimary">@color/deepAqua</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <!--    Normal Button-->
    <style name="NormalButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/_40dp</item>
        <item name="android:insetTop">@dimen/_0dp</item>
        <item name="android:insetBottom">@dimen/_0dp</item>
    </style>

    <style name="SpinnerButton">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/_40dp</item>
        <item name="android:insetTop">@dimen/_0dp</item>
        <item name="android:insetBottom">@dimen/_0dp</item>
        <item name="spinning_bar_padding">@dimen/_5dp</item>
        <item name="spinning_bar_color">@color/deepAqua</item>
        <item name="spinning_bar_width">@dimen/_2dp</item>
        <item name="android:background">@drawable/btn_custom_round_corner</item>
        <item name="backgroundTint">@color/white</item>
        <item name="initialCornerAngle">@dimen/_5dp</item>
    </style>

    <!--    Medium Text Text Button-->
    <style name="MediumTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:minHeight">@dimen/_40dp</item>
        <item name="android:insetTop">@dimen/_0dp</item>
        <item name="android:insetBottom">@dimen/_0dp</item>
    </style>

    <!--    Poppins Medium Small-->
    <style name="EditTextTitle">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--    Small Text-->
    <style name="SmallText">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--   Text Button Medium Text -->
    <style name="TextButtonMediumText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/_13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--   Large Dollar Sign Text -->
    <style name="LargeDollarText">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--   Rounded Image -->
    <style name="RoundImage">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.CornerSize50Percent
        </item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModelStyle</item>
    </style>

    <style name="AppModelStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/top_side_cornered</item>
    </style>

    <!--  EditText Outline Border  -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/deepAquaDark</item>
        <item name="hintEnabled">false</item>
        <item name="android:background">@drawable/tagb_edittext_background</item>
        <item name="boxBackgroundMode">none</item>
    </style>
</resources>